print "--- Is prime? ---"
is-prime?: func [n] [
    if (<= n 1) [false] [
        if (= n 2) [true] [
            divisor: 2
            prime: true
            while [(and prime (<= (* divisor divisor) n))] [
                if (= (mod n divisor) 0) [
                    prime: false
                ]
                divisor: (+ divisor 1)
            ]
            prime
        ]
    ]
]

print "Prime check:"
print (is-prime? 2)
print (is-prime? 17)
print (is-prime? 20)
print (is-prime? 97)

