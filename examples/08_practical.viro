print "--- Temperature converter ---"
celsius-to-fahrenheit: func [c] [
    (+ (* c 9 / 5) 32)
]

fahrenheit-to-celsius: func [f] [
    (* (- f 32) 5 / 9)
]

print "25°C in Fahrenheit:"
print (celsius-to-fahrenheit 25)

print "77°F in Celsius:"
print (fahrenheit-to-celsius 77)

